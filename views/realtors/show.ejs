<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <title></title>
  </head>
  <body>

    <main>

      <div class="row">
        <div class="col s12 #01579b light-blue darken-4">
          <a href="/houses"><h1>Home</h1></a>
        </div>

        <div class="col s6">

          <h1> <%=realtor.name%></h1>

          <br><br>

          <h4>Email me</h4> <br>

          <form action="<%=realtor.email%>" method="post" enctype="text/plain">
            Name:<br>
            <input type="text" name="name"><br>
            E-mail:<br>
            <input type="text" name="mail"><br>
            Comment:<br>
            <input type="text" name="comment" size="50"><br><br>
            <button class="btn" type="button" value="Send" >Send</button>
            <button class="btn" type="reset" value="Reset">Reset</button>

          </form>
            <br>
          <%if(logged && current){%>
            <a href="/realtor/<%=realtor._id%>/edit"> <button class='btn'>Settings</button> </a>
          <%}%>
        </div>

        <div class="col s6 center-align"">
          <h2>House for sale</h2>
          <ul>
            <% for (let i = 0; i < realtor.houses.length; i++) {%>

              <div class="card-panel hoverable">
                <li><h5><%=realtor.houses[i].address%></h5> <br>
                  <a href="/houses/<%=realtor.houses[i]._id%>"><img src="<%=realtor.houses[i].img%>" width="300px">
                </a></li>
              </div>
            <% } %>
          </ul>
        </div>

      </div>
    </main>

    <footer>
      <div>
      <h5 class="center-align">moneyteam100Â®</h5>
      </div>
    </footer>
  </body>
</html>
